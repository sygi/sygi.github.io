# Install
wget -qO- https://get.haskellstack.org/ | sh
stack install hakyll

# Build
stack ghc site.hs

# Run
./site watch

# Deploy
./site build
git checkout master
# TODO: write a copy version that only copies if the file is actually different
cp _site/* .  # not recursive
cp -r -n _site/. .  # don't overwrite
git add <new files>
git commit
git push yet master

